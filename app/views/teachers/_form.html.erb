<%= form_for @teacher do |f| %>

  <ul>
    <% @teacher.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>    
  </ul>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :stress_level %>
  <%= f.number_field :stress_level %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit (@teacher.new_record? ? "Create" : "Update") %>

<% end %>
